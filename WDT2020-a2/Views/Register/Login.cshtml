@model WDT2020_a2.Models.Login

@{
    ViewData["Title"] = "Login";
}

<h1>Register</h1>

<h4>Login Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CheckPassword" class="control-label">Confirm Password</label>
                <input id="CheckPassword" name="CheckPassword" type="password" class="form-control"
                       data-val="true" data-val-required="Please re-type your password to confirm." />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("RegisterFailed", new { @class = "text-danger" })
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}